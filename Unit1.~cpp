void __fastcall TForm1::N1Click(TObject *Sender)
{
    if (OpenDialog1->Execute())
    {
        try
        {
        TRESC->Lines->LoadFromFile(OpenDialog1->FileName);
        }
        catch (...)
        {
        ShowMessage("B³¹d otwarcia pliku. Upewnij siê, ¿e plik istnieje na dysku.");
        }
    }
}
